{
  "name": "nimiq-validators",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@9.11.0",
  "scripts": {
    "build": "nuxi build",
    "dev:packages": "pnpm --filter=./packages/* --parallel run dev",
    "dev:local": "pnpm run dev:packages && nuxi dev",
    "dev": "pnpm run dev:packages && nuxi dev --remote",
    "generate": "nuxi generate",
    "preview": "nuxi preview",
    "postinstall": "nuxi prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:generate": "drizzle-kit generate",
    "db:delete": "drizzle-kit drop"
  },
  "dependencies": {
    "@nimiq/core": "next",
    "@nuxthub/core": "^0.7.20",
    "@unovis/ts": "^1.4.4",
    "@unovis/vue": "^1.4.4",
    "@vueuse/core": "^11.1.0",
    "defu": "^6.1.4",
    "drizzle-orm": "^0.33.0",
    "nimiq-rpc-client-ts": "^0.4.0",
    "nimiq-validators-score": "workspace:*",
    "nuxt": "^3.13.2",
    "pinia": "^2.2.4",
    "radix-vue": "^1.9.6",
    "vue": "^3.5.10",
    "vue-router": "^4.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@nimiq/identicons": "^1.6.2",
    "@nuxt/eslint": "^0.5.7",
    "@nuxt/image": "^1.8.0",
    "@nuxtjs/color-mode": "^3.5.1",
    "@pinia/nuxt": "^0.5.5",
    "@unocss/eslint-config": "^0.63.1",
    "@unocss/nuxt": "^0.63.1",
    "@unocss/preset-rem-to-px": "^0.63.1",
    "@unocss/reset": "^0.63.1",
    "@vueuse/nuxt": "^11.1.0",
    "drizzle-kit": "^0.24.2",
    "drizzle-zod": "^0.5.1",
    "eslint": "catalog:",
    "eslint-plugin-format": "^0.1.2",
    "lint-staged": "catalog:",
    "nimiq-css": "^0.2.2",
    "simple-git-hooks": "catalog:",
    "typescript": "^5.6.2",
    "unocss": "^0.63.1",
    "vite-plugin-top-level-await": "^1.4.4",
    "vite-plugin-wasm": "^3.3.0",
    "wrangler": "^3.79.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
